@model TuProyecto.Models.CalculoModel

<h2>Calculadora de Caída Libre</h2>

<form asp-controller="Calculo" asp-action="Calcular" method="post">
    <div class="form-group">
        <label for="Dato">Nombre del objeto:</label>
        <input type="text" id="Dato" name="Dato" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Altura">Altura inicial (m):</label>
        <input type="number" id="Altura" name="Altura" step="0.01" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Segundos">Tiempo de caída (s):</label>
        <input type="number" id="Segundos" name="Segundos" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Calcular</button>

    <p>Trabajo fue realizado por Marwin Gutierrez - Carnet 240076</p>

    <p>Trabajo fue aceptado por el Ingeniero Guillermo Antonio Pérez Mancía </p>
</form>
